package views

templ Index() {
	@base() {
		<ul id="list"></ul>
		<form hx-post="/todos" hx-target="#list" hx-swap="beforeend">
			<input type="text" name="todo" placeholder="Enter your todo"/>
			<button type="submit">Add</button>
		</form>
	}
}

templ TodoItem(todo string) {
	<li>
		<span>{ todo }</span>
	</li>
}
